[user]
	name = JP Mossman
	email = jp.mossman@chamberlain.com
[credential]
	helper = "!f() { echo \"username=x-access-token\"; echo \"password=$GITHUB_TOKEN\"; }; f"
[core]
	autocrlf = input
[alias]
	tree = log --graph --oneline
	smupdate = submodule update --init --recursive
	fs = ! git fetch && git status
	prdiff = diff --merge-base origin/main
	changes-between = log --merges --first-parent --date=short --pretty=format:'%h - %an, %s'
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	ignoreSubmodules = dirty
[pager]
	branch = false
